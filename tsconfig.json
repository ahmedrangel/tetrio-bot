{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "paths": {
		  "@triangle": ["./path/to/triangle/src"]
    }
  }
}